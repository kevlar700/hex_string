with "config/hex_string_test_config.gpr";
project Hex_String_Test is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Hex_String_Test_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("hex_string_test.adb");

   package Compiler is
     for Default_Switches ("Ada") use Hex_String_Test_Config.Ada_Compiler_Switches
       & ("-gnat2022");
     for Local_Configuration_Pragmas use "gnat.adc";
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

   package Pretty_Printer is
      for Default_Switches ("ada") use ("--eol=unix",
                                        "--call-threshold=1",
                                        "--par-threshold=1",
                                        "--vertical-enum-types",
                                        "--vertical-named-aggregates",
                                        "-W8",
                                        "-c5",
                                        "-c4",
                                        "--separate-loop-then",
                                        "--separate-then");
   end Pretty_Printer;

end Hex_String_Test;
